{
  "manifest_version": 3,
  "name": "Assistente de Atendimento - Quick Chat",
  "version": "1.0",
  "description": "Extensão para criar comandos rápidos de texto",

  "permissions": [
    "storage",
    "activeTab"
  ],

  "action": {
    "default_popup": "popup.html",
    "default_title": "Quick Chat"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}